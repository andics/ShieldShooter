<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myapplication.GameStatics.ChooseGameMode"
    android:touchscreenBlocksFocus="false">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Connect directly to a server"
        android:id="@+id/directConnectButton"
        android:textSize="18dp"
        android:onClick="directConnect"
        android:background="@drawable/round_blue_fusster"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:elegantTextHeight="true"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Use matchmaking"
        android:id="@+id/matchMakingButton"
        android:textSize="18dp"
        android:onClick="matchMaking"
        android:background="@drawable/round_blue_fusster"
        android:layout_below="@+id/directConnectButton"
        android:layout_alignRight="@+id/directConnectButton"
        android:layout_alignEnd="@+id/directConnectButton"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/directConnectButton"
        android:layout_alignStart="@+id/directConnectButton" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="267dp"
        android:id="@+id/imageView6"
        android:background="@mipmap/logo_cropped"
        android:layout_alignTop="@+id/Slogan"
        android:layout_alignLeft="@+id/directConnectButton"
        android:layout_alignStart="@+id/directConnectButton"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shield. Shoot. Reload"
        android:id="@+id/Slogan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textSize="25dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ger_settings"
        android:onClick="showMMSettings" />

</RelativeLayout>
