<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myapplication.Activities.ConnectActivity"
    android:background="#ffffff">
    <Button
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:id="@+id/saveSettingsButton"
        android:onClick="saveSettings"
        android:layout_alignBottom="@+id/stateText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/portTextField"
        android:selectAllOnFocus="true"
        android:background="@drawable/round_grey"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/portLabel"
        android:layout_alignRight="@+id/stateText"
        android:layout_alignEnd="@+id/stateText"
        android:layout_alignTop="@+id/portLabel"
        android:layout_toRightOf="@+id/portLabel"
        android:layout_toEndOf="@+id/portLabel"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port:"
        android:id="@+id/portLabel"
        android:textSize="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/stateText"
        android:layout_marginBottom="121dp"
        android:textColor="#a5afa7"
        android:textSize="28dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
